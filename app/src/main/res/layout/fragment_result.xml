<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/result_center_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:id="@+id/result_center_color"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@id/result_center_view"/>
    <View
        android:id="@+id/result_right_color"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/result_center_view"/>

    <TextView
        android:text="@string/result_orig_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/result_center_color"
        android:layout_alignLeft="@+id/result_center_color"/>

    <TextView
        android:text="@string/result_right_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/result_right_color"
        android:layout_alignRight="@+id/result_right_color"/>

    <TextView
        android:id="@+id/result_center_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_center_color"
        android:textSize="8dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/result_right_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_right_color"
        android:textSize="8dp"
        android:layout_alignRight="@+id/result_right_color"/>

    <Button
        android:id="@+id/result_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_center_color"
        android:layout_marginTop="15dp"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:text="@string/result_share_button"/>

</RelativeLayout>